@page
@model Proiect.Pages.Produse.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1> <font color="#FF0000"> Adauga un anunt nou</h1> </font>

<p>
    <a asp-page="Create">Adauga</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Anunt[0].Categorie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anunt[0].Produs)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Anunt[0].Pret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Anunt) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produs)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Modifica</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Vizualizare</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Cumpara</a>
            </td>
        </tr>
}
    </tbody>
</table>
